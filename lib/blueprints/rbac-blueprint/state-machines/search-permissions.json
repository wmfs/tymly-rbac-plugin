{
  "Comment": "Search Permissions",
  "name": "Search Permissions",
  "Version": "1.0",
  "version": "1.0",
  "categories": [
    "system"
  ],
  "StartAt": "Searching",
  "States": {
    "Searching": {
      "Type": "Task",
      "Resource": "module:storageSearch",
      "ResourceConfig": {
        "modelId": "tymly_permission",
        "filter": {
          "where": {
            "stateMachineName": {
              "equals": "$.stateMachine",
              "includeNulls": false
            },
            "roleId": {
              "equals": "$.roleId",
              "includeNulls": false
            }
          },
          "page": "$.page",
          "limit": 10,
          "orderBy": [
            "-modified"
          ]
        }
      },
      "ResultPath": "$",
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "tymly_rbacAdmin",
      "allows": [
        "*"
      ]
    }
  ]
}
