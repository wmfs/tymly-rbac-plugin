{
  "Comment": "Create an RBAC role",
  "Version": "1.0",
  "version": "1.0",

  "StartAt": "CreateRole",
  "States": {
    "CreateRole": {
      "Type": "Task",
      "Resource": "module:createRole",
      "Parameters": {
        "roleId.$": "$.formData.roleId",
        "label.$": "$.formData.label",
        "description.$": "$.formData.description",
        "inherits.$": "$.formData.inherits"
      },
      "ResultPath": null,
      "End": true
    }
  },

  "restrictions": [
    {
      "roleId": "tymly_rbacAdmin",
      "allows": [
        "*"
      ]
    }
  ]
}
